general {
        colors = true
        interval = 5
        color_good = "#2AA198"
        color_degraded = "#B58900"
        color_bad = "#DC322F"
}

order += "tztime custom"
order += "ipv6"
order += "ethernet _first_"
order += "wireless _first_"
order += "disk /"
order += "battery all"
order += "cpu_usage"
order += "memory"
order += "tztime local"

tztime custom {
    format = "( Í¡Â° ÍœÊ– Í¡Â°)"
}

disk "/" {
        format = "DISK: %avail"
        prefix_type = custom
        low_threshold = 10
        threshold_type = percentage_free
}

ipv6 {
        format_up = "IPv6: %ip"
        format_down = "IPv6: down"
}

ethernet _first_ {
        format_up = "E: %ip"
        format_down = "E: down"
}

wireless _first_ {
        format_up = "W: %ip"
        format_down = "W: down"
}

battery all {
        format = "%status %percentage %remaining"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

cpu_usage {
        format = "CPU: %usage"
}

memory {
        format = "MEM: %used / %total"
        threshold_degraded = "1G"
        format_degraded = "Running out of mem: %available (buy more ram)"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
